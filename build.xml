<project default="uibits">
	<target name="uibits" depends="compile,package" />
	<target name="compile">
		<mkdir dir="build" />
		<javac srcdir="src/main/java" destdir="build" />		
	</target>
	<target name="package">
		<jar destfile="target/jumbletree-ubits.jar">
			<fileset dir="build">
				<include name="**/*" />
			</fileset>
			<fileset dir="src/main/java">
				<include name="**/*" />
				<exclude name="**/*java" />
			</fileset>
		</jar>
	</target>
</project>